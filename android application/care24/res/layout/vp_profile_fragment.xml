<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

<RelativeLayout 
        android:layout_width="match_parent"
    android:layout_height="match_parent" >

<TextView
            android:id="@+id/tvProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="#006633"
            android:gravity="center"
            android:textSize="33sp"
            android:textStyle="bold" />

<TextView
    android:id="@+id/tvName_profile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/tvProfile"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:text="Name: "
    android:textSize="20sp"
    android:textAppearance="?android:attr/textAppearanceMedium" />

<TextView
    android:id="@+id/tvFullName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tvProfile"
    android:layout_toRightOf="@+id/tvName_profile"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="14dp"
    android:layout_alignBottom="@+id/tvName_profile"
    android:text="Farhan Bahar Rayhan"
    android:textSize="18sp"
    
     />


<TextView
    android:id="@+id/tvUsername1_profile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/tvFullName"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:text="Username: "
    android:textSize="20sp"
    android:textAppearance="?android:attr/textAppearanceMedium" />

<TextView
    android:id="@+id/tvUsername2_profile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tvFullName"
    android:layout_toRightOf="@+id/tvUsername1_profile"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="14dp"
    android:text="Farhan Bahar Rayhan"
    android:textSize="18sp"
    
     />

<TextView
    android:id="@+id/tvAge1_profile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/tvUsername2_profile"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:text="Age: "
    android:textSize="20sp"
    android:textAppearance="?android:attr/textAppearanceMedium" />

<TextView
    android:id="@+id/tvAge2_profile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tvUsername2_profile"
    android:layout_toRightOf="@+id/tvAge1_profile"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="14dp"
    android:text="23"
    android:textSize="18sp"
     />

<TextView
    android:id="@+id/tvWeight1_profile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/tvAge2_profile"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:text="Weight: "
    android:textSize="20sp"
    android:textAppearance="?android:attr/textAppearanceMedium" />

<TextView
    android:id="@+id/tvWeight2_profile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tvAge2_profile"
    android:layout_toRightOf="@+id/tvWeight1_profile"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="14dp"
    android:text="60 Kg"
    android:textSize="18sp"
     />
   
        
<TextView
    android:id="@+id/tvSex1_profile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/tvWeight2_profile"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:text="Sex: "
    android:textSize="20sp"
    android:textAppearance="?android:attr/textAppearanceMedium" />

<TextView
    android:id="@+id/tvSex2_profile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tvWeight2_profile"
    android:layout_toRightOf="@+id/tvSex1_profile"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="14dp"
    android:text="Male"
    android:textSize="18sp"
     />

<TextView
    android:id="@+id/tvEmail1_profile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/tvSex2_profile"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:text="Email: "
    android:textSize="20sp"
    android:textAppearance="?android:attr/textAppearanceMedium" />

<TextView
    android:id="@+id/tvEmail2_profile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tvSex2_profile"
    android:layout_toRightOf="@+id/tvEmail1_profile"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="14dp"
    android:text="habi@jabi.com"
    android:textSize="18sp"
     />


<TextView
    android:id="@+id/tvAddress1_profile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/tvEmail2_profile"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:text="Address: "
    android:textSize="20sp"
    android:textAppearance="?android:attr/textAppearanceMedium" />

<TextView
    android:id="@+id/tvAddress2_profile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tvEmail2_profile"
    android:layout_toRightOf="@+id/tvAddress1_profile"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="14dp"
    android:text="BUET"
    android:textSize="18sp"
     />

<Button
    android:id="@+id/btEditProfile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tvAddress2_profile"
    android:layout_marginTop="16dp"
     android:background="@android:color/holo_green_light"
       
    android:text=" Edit Profile " />
   
</RelativeLayout>
</ScrollView>