<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvDoctorList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Find Your Docotor"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn_hospital"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDoctorList"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="Hospital List" 
         android:background="@android:color/holo_green_light"
       
        
        />

    <Button
        android:id="@+id/btn_category"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_hospital"
        android:layout_alignRight="@+id/btn_hospital"
        
        android:layout_below="@+id/btn_hospital"
        android:layout_marginTop="22dp"
        android:text="Category"
        android:background="@android:color/holo_green_light"
         
          />

    <Button
        android:id="@+id/btn_doctor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_category"
         android:layout_alignRight="@+id/btn_category"
        android:layout_below="@+id/btn_category"
        android:layout_marginTop="22dp"
        android:text="Doctor" 
        android:background="@android:color/holo_green_light"
        
        />

</RelativeLayout>